<h1>お気に入り一覧</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Content</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorite_pictures.each do |picture| %>
      <tr>
        <td><%= image_tag(picture.image.url) if picture.image && picture.image.url %></td>
        <td><%= picture.content %></td>
        <td><%= picture.user.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', pictures_path %>