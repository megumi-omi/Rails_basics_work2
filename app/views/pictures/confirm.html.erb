<h3>確認画面</h3>

<%= form_with(model: @picture, local: true, url: pictures_path)do |form| %>
  <%= image_tag(@picture.image.url) if @picture.image && @picture.image.url %>
  <%= form.hidden_field :image_cache %>
  <%= form.hidden_field :content %>
  <%= @picture.content %>

  <%= form.submit "投稿する" %>
<% end %>

<%= form_with(model: @picture, local: true, url: new_picture_path, method: "get")do |form| %>
  <%= form.hidden_field :image_cache %>
  <%= form.hidden_field :content %>
  <%= form.submit '戻る', name: 'back' %>
<% end %>


